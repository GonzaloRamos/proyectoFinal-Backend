<!DOCTYPE html>
<html lang="es">
  <%- include("../../partials/head.ejs") %>
  <body>
    <%- include("../../partials/nav.ejs") %>
    <!-- Pills navs -->
    <div class="container px-4 px-lg-5 mt-5">
      <section class="py-5">
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="tab-login"
              data-toggle="pill"
              href="#pills-login"
              role="tab"
              aria-controls="pills-login"
              aria-selected="true"
              >Login</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="tab-register"
              data-toggle="pill"
              href="#pills-register"
              role="tab"
              aria-controls="pills-register"
              aria-selected="false"
              >Register</a
            >
          </li>
        </ul>
        <!-- Pills navs -->

        <!-- Pills content -->
        <div class="tab-content">
          <div
            class="tab-pane fade show active"
            id="pills-login"
            role="tabpanel"
            aria-labelledby="tab-login"
          >
            <form
              action="/api/user/auth/login"
              method="post"
              enctype="application/x-www-form-urlencoded"
            >
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="text" id="loginName" class="form-control" name="username" />
                <label class="form-label" for="loginName">Username</label>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input
                  type="password"
                  id="loginPassword"
                  class="form-control"
                  name="password"
                />
                <label class="form-label" for="loginPassword">Password</label>
              </div>

              <!-- 2 column grid layout -->
              <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                  <!-- Checkbox -->
                  <div class="form-check mb-3 mb-md-0">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value=""
                      id="loginCheck"
                      checked
                    />
                    <label class="form-check-label" for="loginCheck"> Remember me </label>
                  </div>
                </div>

                <div class="col-md-6 d-flex justify-content-center">
                  <!-- Simple link -->
                  <a href="#!">Forgot password?</a>
                </div>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Sign in
              </button>

              <!-- Register buttons -->
              <div class="text-center">
                <p>Not a member? <a href="#!">Register</a></p>
              </div>
            </form>
          </div>
          <div
            class="tab-pane fade"
            id="pills-register"
            role="tabpanel"
            aria-labelledby="tab-register"
          >
            <form
              enctype="multipart/form-data"
              action="/api/user/auth/register"
              method="post"
            >
              <div class="text-center mb-3">
                <p>Sign up with:</p>
                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-facebook-f"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-google"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-twitter"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="fab fa-github"></i>
                </button>
              </div>

              <p class="text-center">or:</p>

              <!-- Name input -->
              <div class="row">
                <div class="form-outline mb-4 col">
                  <input type="text" id="registerName" class="form-control" name="name" />
                  <label class="form-label" for="registerName">Name</label>
                </div>
                <!-- LastName input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="text"
                    id="registerLastName"
                    class="form-control"
                    name="lastname"
                  />
                  <label class="form-label" for="registerLastName">Lastname</label>
                </div>
                <!-- Username input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="text"
                    id="registerUsername"
                    class="form-control"
                    name="username"
                  />
                  <label class="form-label" for="registerUsername">Username</label>
                </div>
              </div>
              <div class="row">
                <!-- Age input -->
                <div class="form-outline mb-4 col">
                  <input type="number" id="registerAge" name="age" class="form-control" />
                  <label class="form-label" for="registerAge">Age</label>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="email"
                    id="registerEmail"
                    name="email"
                    class="form-control"
                  />
                  <label class="form-label" for="registerEmail">Email</label>
                </div>
              </div>

              <div class="row">
                <!-- Address input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="text"
                    id="registerAddress"
                    name="address"
                    class="form-control"
                  />
                  <label class="form-label" for="registerAddress">Address</label>
                </div>

                <!-- Phone input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="tel"
                    id="registerPhone"
                    name="phone"
                    class="form-control"
                  />
                  <label class="form-label" for="registerPhone">Phone</label>
                </div>

                <!-- Photo input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="file"
                    id="registerPhoto"
                    name="photo"
                    class="form-control"
                  />
                  <label class="form-label" for="registerPhoto">Photo</label>
                </div>
              </div>
              <div class="row">
                <!-- Password input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="password"
                    id="registerPassword"
                    class="form-control"
                    name="password"
                  />
                  <label class="form-label" for="registerPassword">Password</label>
                </div>

                <!-- Repeat Password input -->
                <div class="form-outline mb-4 col">
                  <input
                    type="password"
                    id="registerRepeatPassword"
                    class="form-control"
                    name="repeatPassword"
                  />
                  <label class="form-label" for="registerRepeatPassword"
                    >Repeat password</label
                  >
                </div>
              </div>
              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-center mb-4">
                <input
                  class="form-check-input me-2"
                  type="checkbox"
                  value=""
                  id="registerCheck"
                  checked
                  aria-describedby="registerCheckHelpText"
                />
                <label class="form-check-label" for="registerCheck">
                  I have read and agree to the terms
                </label>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-3">
                Sign in
              </button>
            </form>
          </div>
        </div>
      </section>
    </div>
    <%- include ("../../partials/footer.ejs") %> <%- include("../../partials/scripts.ejs")
    %>
  </body>
</html>
<!-- Pills content -->
